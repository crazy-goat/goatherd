# Contributor:
# Maintainer:
pkgname=goatherd
pkgver=0.2.1    
pkgrel=0
pkgdesc="PHP laod balancer and proces manager"
url="https://github.com/crazy-goat/goatherd"
arch="all"
license="MIT"
depends=""
makedepends="linux-headers cmake python-dev wget"
install=""
subpackages=""
source="${pkgname}-${pkgver}.tar.gz::https://github.com/crazy-goat/$pkgname/archive/v$pkgver.tar.gz"
builddir="$srcdir/${pkgname}-${pkgver}"

build() {
	cd "$builddir"
    cmake -DCMAKE_BUILD_TYPE=Release -DUSE_INTERNAL_BOOST=ON -DCMAKE_INSTALL_PREFIX:PATH=/usr .
    make -j4
}

check() {
	cd "$builddir"
#    ./goatherd || return 1
}

package() {
	cd "$builddir"
    make DESTDIR="$pkgdir" install || return 1
}

sha512sums="33fc29c2fbe5e82e57ab9cd18134caf387fe56db84f1c050bd7b466ec3cb8eca1b9171ab78611959487e0dd4a4af0df2a9e8bc75afba8808a844b783b07cfb2d  goatherd-0.2.1.tar.gz"
